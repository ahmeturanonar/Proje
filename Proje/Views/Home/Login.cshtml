@model Proje.Models.User
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/AdminPanelContent/vendor/bootstrap/css/bootstrap.min.css">
    <link href="~/AdminPanelContent/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/AdminPanelContent/libs/css/style.css">
    <link rel="stylesheet" href="~/AdminPanelContent/vendor/fonts/fontawesome/css/fontawesome-all.css">

    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>

<body>
    <!-- ============================================================== -->
    <!-- login page  -->
    <!-- ============================================================== -->
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><a href="~/AdminPanelContent/index.html"><img class="logo-img" src="~/AdminPanelContent/images/logo.png" alt="logo"></a><span class="splash-description">Lütfen kullanıcı bilgilerinizi giriniz.</span></div>
            <div class="card-body">

                @using (Html.BeginForm())
                {


                    <div class="form-group">

                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control form-control-lg", placeholder = "Kullanıcı Adı", autocomplete = "off" })

                    </div>
                    <div class="form-group">

                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-lg", placeholder = "Şifre", type = "password" })

                    </div>
                    @*<div class="form-group">
                <label class="custom-control custom-checkbox">
                    @Html.CheckBoxFor(x => x.IsPersistent, new { @class = "custom-control-input", type="checkbox" })
                   <span class="custom-control-label">Beni Hatırla</span>
                </label>
            </div>*@
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Giriş yap</button>

                    @Html.ActionLink("Ana Sayfa", "Index", "Home", null, new { @class = "btn btn-warning btn-lg btn-block" })

                   <hr />

                    if (string.IsNullOrEmpty(@ViewBag.LoginError))
                    {

                    }
                    else
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            @(ViewBag.LoginError)
                        </div>
                    }



                }

            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    @Html.ActionLink("Hesap oluştur", "Register", "Home", null, new {@class="footer-link" })
                </div>
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="#" class="footer-link">Parolamı sıfırla</a>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================================== -->
    <!-- end login page  -->
    <!-- ============================================================== -->
    <!-- Optional JavaScript -->
    <script src="~/AdminPanelContent/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/AdminPanelContent/vendor/bootstrap/js/bootstrap.bundle.js"></script>
</body>

</html>
