@model Proje.Models.User
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

@using (Html.BeginForm("CreateUser","Home",FormMethod.Post,new {enctype = "multipart/form-data" }))
{
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <h5 class="card-header">Kullanıcı Ekle</h5>
                    <div class="card-body">
                        <div class="table-responsive ">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Kullanıcı Adı</th>
                                        <th scope="col">Sifre</th>
                                        <th scope="col">Rol</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">@Html.TextBoxFor(x => x.Username, new { @class = "form-control" })</th>
                                        <th scope="row">@Html.TextBoxFor(x => x.Password, new { @class = "form-control" })</th>
                                        <th class="scope">@Html.DropDownListFor(x => x.Role, (List<SelectListItem>)ViewBag.Roles, new { @class = "dropdown-item" })</th>



                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <b>Profil Resmi:</b> <input type="file" name="file" class="" />
                <br />
                <br />
                <input type="submit" name="btnAddUser" value="Ekle" class="btn btn-success" />
                @Html.ActionLink("Kategorileri Listele", "ListCategories", "Home", new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
}