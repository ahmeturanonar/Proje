@model Proje.Models.Post
@{
    ViewBag.Title = "DeleteArticle";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

@using (Html.BeginForm())
{


    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <h5 class="card-header">Kullanıcı Sil</h5>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">Yazı ID</th>
                                            <th class="border-0">Yazı Resmi</th>
                                            <th class="border-0">Yazı Baslıgı</th>
                                            <th class="border-0">Yazı Icerigi</th>
                                            <th class="border-0">Kategori</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <th scope="row">@Model.PostId</th>
                                            <td><div class="m-r-10"><img width="45" class="rounded" src="@Model.PostImage"></div></td>
                                            <td>@Model.PostTitle</td>

                                            @if (Model.PostText.Length <= 445)
                                            {
                                                <td>@Html.Raw(Model.PostText)</td>

                                            }
                                            else
                                            {
                                                <td>@Html.Raw(Model.PostText.Substring(0, 445))...</td>
                                            }

                                            <td>@Model.Category.CategoryName</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <input type="submit" name="" value="Sil" class="btn btn-danger" />
                    @Html.ActionLink("Listele", "ListArticles", "Home", new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
}


